<% layout('/layouts/boilerplate') -%>

<div class="row mt-3">
    <h1 class="col-6 offset-3">Signup on WanderLust</h1><br>
    <div class="col-6 offset-3">
        <form action="/signup" method="post" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
            <input type="text" name="username" id="usernmae" placeholder="Enter Username"  class="form-control" required>
            <div class="valid-feedback">looks good</div>
            </div>

            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
            <input type="email" name="email" id="usernmae" placeholder="Enter email"  class="form-control" required>
            <div class="valid-feedback">looks good</div>
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
            <input type="password" name="password" id="password" placeholder="Enter Password"  class="form-control" required>
            <div class="valid-feedback">looks good</div>
            </div>

            <button class="btn btn-success">Signup</button>
            
        </form>
        </div>
    </div>