<% include ./includes/navbar.ejs %>

<div class="container mt-4">
  <h2>Search Results for "<%= searchQuery %>"</h2>
  
  <% if (listings.length > 0) { %>
    <div class="row">
      <% for (let listing of listings) { %>
        <div class="col-md-4">
          <div class="card mb-4">
            <% if (listing.image && listing.image.url) { %>
              <img src="<%= listing.image.url %>" class="card-img-top" alt="<%= listing.title %>">
            <% } else { %>
              <img src="/images/default.jpg" class="card-img-top" alt="Default Image">
            <% } %>
            <div class="card-body">
              <h5 class="card-title"><%= listing.title %></h5>
              <p class="card-text"><%= listing.location %></p>
              <p class="card-text"><%= listing.description.substring(0, 100) %>...</p>
              <a href="/listings/<%= listing._id %>" class="btn btn-primary">View Details</a>
            </div>
          </div>
        </div>
      <% } %>
    </div>
  <% } else { %>
    <p>No listings found for your search.</p>
  <% } %>
</div>